<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="WildlifeTrackerSystem.Views.Fish"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WildlifeTrackerSystem.Views"
    xmlns:selectors="clr-namespace:WildlifeTrackerSystem.Views.selectors"
    xmlns:viewmodel="clr-namespace:WildlifeTrackerSystem.ViewModels"
    x:DataType="viewmodel:CreateViewModel">
    <Grid
        x:Name="fishGrid"
        Padding="10"
        ColumnDefinitions=".35*, .65*"
        ColumnSpacing="10"
        RowDefinitions="Auto, Auto, Auto, Auto, Auto"
        RowSpacing="10">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Text="Can it breathe air?" />
        <HorizontalStackLayout
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="Bisque"
            RadioButtonGroup.GroupName="AirRadioGrp"
            RadioButtonGroup.SelectedValue="{Binding AirSelection}">
            <RadioButton
                BackgroundColor="Bisque"
                Content="Yes"
                GroupName="AirRadioGrp"
                Value="True" />
            <RadioButton
                Content="No"
                GroupName="AirRadioGrp"
                Value="False" />
        </HorizontalStackLayout>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Text="Water type" />
        <HorizontalStackLayout
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Bisque"
            RadioButtonGroup.GroupName="WaterRadioGrp"
            RadioButtonGroup.SelectedValue="{Binding WaterSelection}">
            <RadioButton
                Content="Fresh water"
                GroupName="WaterRadioGrp"
                Value="FreshWater" />
            <RadioButton
                Content="Salt water"
                GroupName="WaterRadioGrp"
                Value="SaltWater" />
        </HorizontalStackLayout>

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Text="Species" />
        <!--  ItemsSource attribute is set in code behind  -->
        <Picker
            x:Name="speciesPicker"
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="Bisque"
            IsEnabled="{Binding IsSpeciesEnabled}"
            ItemDisplayBinding="{Binding}"
            SelectedItem="{Binding SelectedSpecies}" />

        <VerticalStackLayout Grid.Row="3" Grid.ColumnSpan="2">
            <selectors:FishSpeciesSelector
                Margin="0,10,0,0"
                BackgroundColor="LightYellow"
                Condition="{Binding SelectedSpecies}">

                <selectors:FishSpeciesSelector.Option1>
                    <local:Ray />
                </selectors:FishSpeciesSelector.Option1>

                <selectors:FishSpeciesSelector.Option2>
                    <local:Fangtooth />
                </selectors:FishSpeciesSelector.Option2>

            </selectors:FishSpeciesSelector>
        </VerticalStackLayout>
    </Grid>
</ContentView>
