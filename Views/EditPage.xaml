<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WildlifeTrackerSystem.Views.EditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WildlifeTrackerSystem.Views"
    xmlns:selectors="clr-namespace:WildlifeTrackerSystem.Views.selectors"
    xmlns:viewmodel="clr-namespace:WildlifeTrackerSystem.ViewModels"
    Title="Edit animal"
    x:DataType="viewmodel:EditViewModel">
    <ScrollView>
        <!--  Main container  -->
        <Grid ColumnDefinitions=".6*, .4*" RowDefinitions="300, Auto">

            <!--  Animal container  -->
            <Border
                x:Name="animalContainer"
                Grid.Row="0"
                Grid.Column="0"
                Margin="14,4,14,14"
                Padding="16,16"
                BackgroundColor="#FFD95F"
                StrokeShape="RoundRectangle 6">
                <Border.Shadow>
                    <Shadow
                        Brush="Gray"
                        Opacity="0.8"
                        Radius="40"
                        Offset="5,15" />
                </Border.Shadow>
                <Grid
                    Padding="10"
                    ColumnDefinitions=".35*, .65*"
                    ColumnSpacing="10"
                    RowDefinitions="Auto, Auto, Auto, Auto"
                    RowSpacing="10">

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="5"
                        Text="Name" />
                    <Entry
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#FFEFC8"
                        MaxLength="64"
                        Placeholder="Enter text"
                        Text="{Binding AnimalName}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        Text="Gender" />
                    <Picker
                        Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="#FFEFC8"
                        ItemDisplayBinding="{Binding}"
                        ItemsSource="{Binding Genders}"
                        SelectedItem="{Binding SelectedGender}" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        Text="Age" />
                    <Entry
                        Grid.Row="2"
                        Grid.Column="1"
                        BackgroundColor="#FFEFC8"
                        Placeholder="Enter number"
                        Text="{Binding AnimalAge}" />
                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        Text="Category" />
                    <Picker
                        x:Name="categoryPicker"
                        Grid.Row="3"
                        Grid.Column="1"
                        BackgroundColor="#FFEFC8"
                        IsEnabled="{Binding IsSpeciesEnabled}"
                        ItemDisplayBinding="{Binding}"
                        ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}" />
                </Grid>
            </Border>

            <!--  Category container  -->
            <Border
                x:Name="categoryContainer"
                Grid.Row="1"
                Grid.Column="0"
                Margin="14,4,14,14"
                Padding="16,8"
                BackgroundColor="#FFEFC8"
                StrokeShape="RoundRectangle 6">
                <Border.Shadow>
                    <Shadow
                        Brush="Gray"
                        Opacity="0.8"
                        Radius="40"
                        Offset="5,15" />
                </Border.Shadow>
                <VerticalStackLayout>
                    <selectors:AnimalCategorySelector Margin="0,10,0,0" Condition="{Binding SelectedCategory}">

                        <selectors:AnimalCategorySelector.Option1>
                            <local:Mammals />
                        </selectors:AnimalCategorySelector.Option1>

                        <selectors:AnimalCategorySelector.Option2>
                            <local:Reptiles />
                        </selectors:AnimalCategorySelector.Option2>

                        <selectors:AnimalCategorySelector.Option3>
                            <local:Fish />
                        </selectors:AnimalCategorySelector.Option3>

                    </selectors:AnimalCategorySelector>
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="#D70654"
                        Command="{Binding UpdateAnimalCommand}"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        Text="Update animal"
                        WidthRequest="130" />
                </VerticalStackLayout>
            </Border>
            <Border
                x:Name="animalOldInfo"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="4,4,14,14"
                Padding="16,16"
                BackgroundColor="#B8D576"
                StrokeShape="RoundRectangle 6">
                <Border.Shadow>
                    <Shadow
                        Brush="Gray"
                        Opacity="0.8"
                        Radius="40"
                        Offset="5,15" />
                </Border.Shadow>
                <VerticalStackLayout Padding="20,10">
                    <Label FontAttributes="Bold" Text="Animal old details:" />
                    <Label Text="{Binding AnimalToUpdate}" />
                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="#D70654"
                        Command="{Binding LoadAnimalOldDataCommand}"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        Text="Load old data"
                        WidthRequest="120" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>