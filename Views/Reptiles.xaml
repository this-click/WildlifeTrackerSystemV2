<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="WildlifeTrackerSystem.Views.Reptiles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WildlifeTrackerSystem.Views"
    xmlns:selectors="clr-namespace:WildlifeTrackerSystem.Views.selectors"
    xmlns:viewmodel="clr-namespace:WildlifeTrackerSystem.ViewModels"
    x:DataType="viewmodel:CreateViewModel">
    <Grid
        x:Name="reptilesGrid"
        Padding="10"
        ColumnDefinitions=".35*, .65*"
        ColumnSpacing="10"
        RowDefinitions="Auto, Auto, Auto, Auto, Auto"
        RowSpacing="10">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Text="Number of limbs" />
        <Entry
            Grid.Row="0"
            Grid.Column="1"
            BackgroundColor="Bisque"
            Placeholder="Enter number"
            Text="{Binding NumOfLimbs}" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Text="Tail length" />
        <Entry
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Bisque"
            Placeholder="Enter number"
            Text="{Binding TailLength}" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Text="Species" />
        <!--  ItemsSource attribute is set in code behind  -->
        <Picker
            x:Name="speciesPicker"
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="Bisque"
            IsEnabled="{Binding IsSpeciesEnabled}"
            ItemDisplayBinding="{Binding}"
            SelectedItem="{Binding SelectedSpecies}" />

        <VerticalStackLayout Grid.Row="3" Grid.ColumnSpan="2">
            <selectors:ReptileSpeciesSelector
                Margin="0,10,0,0"
                BackgroundColor="LightYellow"
                Condition="{Binding SelectedSpecies}">

                <selectors:ReptileSpeciesSelector.Option1>
                    <local:Turtle />
                </selectors:ReptileSpeciesSelector.Option1>

                <selectors:ReptileSpeciesSelector.Option2>
                    <local:Lizard />
                </selectors:ReptileSpeciesSelector.Option2>

            </selectors:ReptileSpeciesSelector>
        </VerticalStackLayout>
    </Grid>
</ContentView>
