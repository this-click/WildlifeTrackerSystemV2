<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WildlifeTrackerSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WildlifeTrackerSystem"
    xmlns:views="clr-namespace:WildlifeTrackerSystem.Views"
    Title="WildlifeTrackerSystem"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />

    <ShellContent
        Title="Animal list"
        ContentTemplate="{DataTemplate views:ListPage}"
        Route="ListPage" />

    <ShellContent
        Title="Edit animal"
        ContentTemplate="{DataTemplate views:EditPage}"
        Route="EditPage" />

</Shell>
